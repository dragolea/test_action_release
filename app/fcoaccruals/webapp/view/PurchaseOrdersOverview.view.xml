<mvc:View
    xmlns:layout="sap.ui.layout"
    controllerName="de.freudenberg.fco.accruals.controller.PurchaseOrdersOverview"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:mode="sap.ui.table.rowmodes"
    core:require="{constants: 'fcoaccruals/util/constants/constants'}"
>
    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false"
        showFooter="true"
        fitContent="true"
    >
        <semantic:titleHeading>
            <Title
                text="{i18n>LIST_REPORT.TITLE}"
                level="H2"
            />
        </semantic:titleHeading>

        <semantic:titleSnappedContent>
            <Text text="{i18n>LIST_REPORT.TITLE.SNAPPED_FRONT} {viewModel>/name}{i18n>LIST_REPORT.TITLE.SNAPPED_BACK}" />
        </semantic:titleSnappedContent>

        <semantic:titleExpandedContent>
            <Text text="{i18n>LIST_REPORT.TITLE.EXPANDED_FRONT} {viewModel>/name}{i18n>LIST_REPORT.TITLE.EXPANDED_BACK}" />
        </semantic:titleExpandedContent>

        <semantic:headerContent>
            <!-- Workaround: Fetching data using an OData approach. 
            After receiving the data, it is transformed into a JSON model and sent back to the Tree Table.
            This "shadow controll" is placed in the headerContent to not interfer with the layouting of the content aggregation.
            Unfortunately this results in a whitespace beneath the titleSnappedContent/titleExpandedContent.-->
            <Table
                id="shadowTable"
                visible="false"
                items="{
                    path: '/Orders',
                    parameters: { 
                        $select : ['to_OrderItems', 'to_OrderItems/Supplier', 'to_OrderItems/SupplierText', 'to_OrderItems/PurchaseOrderItemText', 'to_OrderItems/AccountAssignmentCategory', 'to_OrderItems/OrderID', 'to_OrderItems/CostCenterID', 'to_OrderItems/OpenTotalAmount', 'to_OrderItems/OpenTotalAmountEditable', 'to_OrderItems/ProcessingState_code', 'to_OrderItems/CreationDate', 'to_OrderItems/Editable','to_OrderItems/Requester','to_OrderItems/Highlight', 'to_OrderItems/IsOrderItem']
                    },
                    events: {
                        dataReceived: '.dataReceivedControl'
                    }
                }"
            >
                <columns>
                    <Column>
                        <Text text="PurchaseOrder" />
                    </Column>
                    <Column>
                        <Text text="PurchaseOrderItem" />
                    </Column>
                    <Column>
                        <Text text="Supplier" />
                    </Column>
                    <Column>
                        <Text text="SupplierText" />
                    </Column>
                    <Column>
                        <Text text="PurchaseOrderItemText" />
                    </Column>
                    <Column>
                        <Text text="AccountAssignmentCategory" />
                    </Column>
                    <Column>
                        <Text text="OrderID" />
                    </Column>
                    <Column>
                        <Text text="CostCenterID" />
                    </Column>
                    <Column>
                        <Text text="OpenTotalAmount" />
                    </Column>
                    <Column>
                        <Text text="OpenTotalAmountEditable" />
                    </Column>
                    <Column>
                        <Text text="NodeID" />
                    </Column>
                    <Column>
                        <Text text="HierarchyLevel" />
                    </Column>
                    <Column>
                        <Text text="ParentNodeID" />
                    </Column>
                    <Column>
                        <Text text="DrillState" />
                    </Column>
                    <Column>
                        <Text text="ProcessingState_code" />
                    </Column>
                    <Column>
                        <Text text="CreationDate" />
                    </Column>
                    <Column>
                        <Text text="Requester" />
                    </Column>
                    <Column>
                        <Text text="Editable" />
                    </Column>
                    <Column>
                        <Text text="Highlight" />
                    </Column>
                    <Column>
                        <Text text="IsOrderItem" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{PurchaseOrder}" />
                            <Text text="{PurchaseOrderItem}" />
                            <Text text="{Supplier}" />
                            <Text text="{SupplierText}" />
                            <Text text="{PurchaseOrderItemText}" />
                            <Text text="{AccountAssignmentCategory}" />
                            <Text text="{OrderID}" />
                            <Text text="{CostCenterID}" />
                            <Text text="{OpenTotalAmount}" />
                            <Text text="{OpenTotalAmountEditable}" />
                            <Text text="{NodeID}" />
                            <Text text="{HierarchyLevel}" />
                            <Text text="{ParentNodeID}" />
                            <Text text="{DrillState}" />
                            <Text text="{ProcessingState_code}" />
                            <Text text="{CreationDate}" />
                            <Text text="{Requester}" />
                            <Text text="{Editable}" />
                            <Text text="{Highlight}" />
                            <Text text="{IsOrderItem}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:headerContent>

        <semantic:content>
            <table:TreeTable
                id="TreeTableOrders"
                width="auto"
                selectionMode="None"
                enableColumnReordering="false"
                rows="{
                    path: 'orders>/'
                    }"
                rowActionCount="1"
                busy="{viewModel>/busy}"
            >
                <table:rowSettingsTemplate>
                    <table:RowSettings
                        highlight="{orders>Highlight}"
                        highlightText="{StatusText}"
                    />
                </table:rowSettingsTemplate>

                <table:rowMode>
                    <mode:Auto />
                </table:rowMode>

                <table:columns>
                    <table:Column filterProperty="PurchaseOrder">
                        <Label text="{i18n>TABLE.COLUMN.PURCHASE_ORDER}" />
                        <table:template>
                            <Text
                                text="{= %{orders>PurchaseOrderItem} === null ? %{orders>PurchaseOrder} : ' '}"
                                wrapping="false"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column>
                        <Label text="{i18n>TABLE.COLUMN.PURCHASE_ORDER_ITEM}" />
                        <table:template>
                            <Text
                                text="{orders>PurchaseOrderItem}"
                                wrapping="false"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column filterProperty="Supplier">
                        <Label text="{i18n>TABLE.COLUMN.SUPPLIER}" />
                        <table:template>
                            <Text
                                text="{orders>Supplier}"
                                wrapping="false"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column filterProperty="SupplierText">
                        <Label text="{i18n>TABLE.COLUMN.SUPPLIER_TEXT}" />
                        <table:template>
                            <Text
                                text="{orders>SupplierText}"
                                wrapping="false"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column filterProperty="PurchaseOrderItemText">
                        <Label
                            text="{i18n>TABLE.COLUMN.PURCHASE_ORDER_ITEM_TEXT}"
                        />
                        <table:template>
                            <Text
                                text="{orders>PurchaseOrderItemText}"
                                wrapping="false"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column filterProperty="OrderID">
                        <Label text="{i18n>TABLE.COLUMN.ORDER_ID}" />
                        <table:template>
                            <Text
                                text="{orders>OrderID}"
                                wrapping="false"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column filterProperty="CostCenterID">
                        <Label text="{i18n>TABLE.COLUMN.COST_CENTER_ID}" />
                        <table:template>
                            <Text
                                text="{orders>CostCenterID}"
                                wrapping="false"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column>
                        <Label text="{i18n>TABLE.COLUMN.OPEN_TOTAL_AMOUNT}" />
                        <table:template>
                            <Text
                                text="{orders>OpenTotalAmount}"
                                wrapping="false"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column>
                        <Label
                            text="{i18n>TABLE.COLUMN.OPEN_TOTAL_AMOUNT_EDITABLE}"
                        />
                        <table:template>
                            <FlexBox width="100%">
                                <Text
                                    text="{orders>OpenTotalAmountEditable}"
                                    wrapping="false"
                                    visible="{= %{orders>PurchaseOrderItem} === null ? true : false}"
                                />
                                <Input
                                    value="{orders>OpenTotalAmountEditable}"
                                    type="Number"
                                    visible="{= %{orders>PurchaseOrderItem} !== null ? true : false}"
                                    editable="{= %{orders>ProcessingState_code} === constants.ProcessingState.USER ? true : false}"
                                    change=".onOpenTotalAmountEditableChange"
                                />
                            </FlexBox>
                        </table:template>
                    </table:Column>
                </table:columns>

                <table:rowActionTemplate>
                    <table:RowAction>
                        <table:RowActionItem
                            icon="sap-icon://history"
                            press=".onChangeHistoryPress"
                            visible="{orders>IsOrderItem}"
                        />
                    </table:RowAction>
                </table:rowActionTemplate>
            </table:TreeTable>
        </semantic:content>

        <semantic:positiveAction>
            <semantic:PositiveAction
                text="{i18n>LIST_REPORT.FOOTER.BUTTON.SAVE}"
                press=".updateProcessingState"
            />
        </semantic:positiveAction>
    </semantic:SemanticPage>
</mvc:View>
